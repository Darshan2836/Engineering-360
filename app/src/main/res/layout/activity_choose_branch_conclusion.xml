<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CareerCounsellingModule.ChooseBranchConclusion">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/bestEnggClg_id"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/colorPrimary"
        android:theme="@style/MyToolbarStyle"
        app:title="Your Result"
        app:titleTextColor="@color/white" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/bestEnggClg_id"
        android:layout_margin="20dp"
        android:orientation="vertical">

        <!--comp-->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/nunito_semibold"
                android:text="Computer Science"
                android:textColor="@color/black"
                android:textSize="15dp" />

            <TextView
                android:id="@+id/csScore_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/nunito_semibold"
                android:text="XX"
                android:layout_alignParentRight="true"
                android:textColor="@color/black"
                android:textSize="15dp" />
        </RelativeLayout>

        <!--it-->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/nunito_semibold"
                android:text="Information Technology"
                android:textColor="@color/black"
                android:textSize="15dp" />

            <TextView
                android:id="@+id/itScore_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/nunito_semibold"
                android:text="XX"
                android:layout_alignParentRight="true"
                android:textColor="@color/black"
                android:textSize="15dp" />
        </RelativeLayout>

        <!--elec-->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/nunito_semibold"
                android:text="Electrical"
                android:textColor="@color/black"
                android:textSize="15dp" />

            <TextView
                android:id="@+id/elecScore_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/nunito_semibold"
                android:text="XX"
                android:layout_alignParentRight="true"
                android:textColor="@color/black"
                android:textSize="15dp" />
        </RelativeLayout>

        <!--entc-->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/nunito_semibold"
                android:text="ENTC"
                android:textColor="@color/black"
                android:textSize="15dp" />

            <TextView
                android:id="@+id/entcScore_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/nunito_semibold"
                android:text="XX"
                android:layout_alignParentRight="true"
                android:textColor="@color/black"
                android:textSize="15dp" />
        </RelativeLayout>

        <!--civil-->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/nunito_semibold"
                android:text="Civil"
                android:textColor="@color/black"
                android:textSize="15dp" />

            <TextView
                android:id="@+id/civilScore_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/nunito_semibold"
                android:text="XX"
                android:layout_alignParentRight="true"
                android:textColor="@color/black"
                android:textSize="15dp" />
        </RelativeLayout>

        <!--mech-->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/nunito_semibold"
                android:text="Mechanical"
                android:textColor="@color/black"
                android:textSize="15dp" />

            <TextView
                android:id="@+id/mechScore_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/nunito_semibold"
                android:text="XX"
                android:layout_alignParentRight="true"
                android:textColor="@color/black"
                android:textSize="15dp" />
        </RelativeLayout>

        <Button
            android:id="@+id/homePageBtn_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/green"
            android:text="Go to Home Page"
            android:layout_gravity="center"
            android:fontFamily="@font/nunito_semibold"
            android:textAllCaps="false"
            android:layout_marginTop="40dp">
        </Button>

    </LinearLayout>






</RelativeLayout>